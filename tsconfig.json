{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "noFallthroughCasesInSwitch": true,
        "composite": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules"
    ],
    "include": [
        "src"
    ]
}
